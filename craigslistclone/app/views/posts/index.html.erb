<%= content_tag :h1, @category.title if @category %>

<div id='searchresults'>
  <table>
    <tr>
      <% @posts.each do |post| %>
        <td>
          <%= link_to [post.category, post] do %>
            <%= image_tag post.picture.thumb unless post.picture.try(:thumb).blank? %><br />
            <div class="below-image">
              <span class="price">
                <% if post.price %>
                  $<%= post.price %>
                <% end %>
              </span><br />
              <%= post.title %>
            </div>
          <% end %>
        </td>
      <% end %>
    </tr>
  </table>
</div>



<%= link_to 'New Post', new_category_post_path(@category) if @category %>
