<h1>Listing posts</h1>

<table>
 

<% @posts.each do |post| %>
  <tr>
    <td><%= link_to post.title, [@category, post] %></td>
    <td><%= post.user.email %></td>
    <td><%= link_to 'Destroy', [@category, post], confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_category_post_path(@category) %>
